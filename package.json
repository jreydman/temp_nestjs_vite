{
  "name": "@alterworld-workspace/nestjs-backend-app",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "----------------------STARTERS-------------------------------": "",
    "vite": "clear && dotenv -e envs/.env.local -- vite --config configs/vite.config.mjs",
    "test": "clear && dotenv -e envs/.env.local -- vitest --config configs/vite.config.mjs --watch",
    "----------------------EDITOR---------------------------------": "",
    "format": "clear && prettier --config configs/prettier.config.mjs --ignore-path configs/.prettierignore --write .",
    "lint": "clear && eslint --config configs/eslint.config.mjs src",
    "----------------------PRISMA---------------------------------": "",
    "prisma:generate:watch": "clear && dotenv -e envs/.env.local -- prisma generate --watch",
    "prisma:migrate:dev": "clear && dotenv -e envs/.env.local -- prisma migrate dev",
    "prisma:seed": "clear && dotenv -e envs/.env.local -- prisma db seed",
    "----------------------EXTERNAL--------------------------------": "",
    "eslint-inspector": "clear && eslint-config-inspector --config configs/eslint.config.mjs --basePath . --open false",
    "prisma-studio": "clear && dotenv -e envs/.env.local -- prisma studio --browser none",
    "compodoc": "clear && compodoc --tsconfig configs/typescript.config.json --output documentation/generated/compodoc --theme material --serve --watch --open false",
    "vitest-coverage": "clear && dotenv -e envs/.env.local -- vitest --config configs/vite.config.mjs watch --coverage",
    "external:pool": "concurrently 'pnpm run eslint-inspector' 'pnpm run prisma-studio' 'pnpm run compodoc' 'pnpm run vitest-coverage'",
    "----------------------DOCKER----------------------------------": "",
    "docker-compose:up": "docker-compose --file configs/docker-compose.yaml --env-file envs/.env.local -p alterworld-workspace up -d",
    "docker-compose:down": "docker-compose --file configs/docker-compose.yaml --env-file -p alterworld-workspace envs/.env.local down -v",
    "----------------------ADDITIONS-------------------------------": "",
    "prepare": "husky configs/.husky || true"
  },
  "prisma": {
    "schema": "src/shared/utils/prisma/schema",
    "migrateOutput": "src/shared/utils/prisma/generated/migrations",
    "seed": "node -r @swc-node/register src/shared/utils/prisma/seed"
  },
  "dependencies": {
    "@fastify/static": "^7.0.0",
    "@nestjs/common": "^10.4.3",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.3",
    "@nestjs/platform-fastify": "^10.4.3",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "5.20.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-promise": "^7.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.25",
    "@darraghor/eslint-plugin-nestjs-typed": "^5.0.24",
    "@eslint/config-inspector": "^0.5.4",
    "@nestjs/testing": "^10.4.4",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.7.26",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.6.1",
    "@vitest/coverage-v8": "^2.1.1",
    "concurrently": "^9.0.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.11.1",
    "eslint-plugin-prettier": "^5.2.1",
    "fastify": "^5.0.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prettier-plugin-embed": "0.4.15",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sh": "^0.14.0",
    "prisma": "^5.19.1",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.6",
    "vite-plugin-node": "^3.1.0",
    "vitest": "^2.1.1"
  }
}
